<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="FilmsXamarin.View.AboutView"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="About">
    <ContentPage.Content>
        <ScrollView>
            <Grid>
                <Grid x:Name="SplashGrid" BackgroundColor="#1b97f3">
                    <Image
                        x:Name="Logo"
                        HorizontalOptions="Center"
                        Source="aboutpink2.png"
                        TranslationY="-12"
                        VerticalOptions="Center" />
                </Grid>
                <StackLayout
                    x:Name="outerStack"
                    HorizontalOptions="FillAndExpand"
                    IsVisible="False"
                    VerticalOptions="FillAndExpand">
                    <Label x:Name="mainText" Text="{Binding aboutText}" />
                </StackLayout>
            </Grid>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>