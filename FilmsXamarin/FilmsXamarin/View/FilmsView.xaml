    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Films">
    <ContentPage.Content>
        <StackLayout>
            <!--  SelectedItem="{Binding Film}">  -->
            <ListView x:Name="FilmsList" ItemsSource="{Binding Films}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <!--<ViewCell>-->
                        <StackLayout>
                            <Image Source="about.png" />
                            <!--<Label Text="{Binding title}" />
                                <Label Text="{Binding overview}" />-->
                        </StackLayout>
                        <!--</ViewCell>-->
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>